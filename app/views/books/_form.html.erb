<%= form_for @book, :html => {:class => "form-horizontal"} do |f| %>
  <% if book.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(book.errors.count, "error") %> prohibited this book from being saved:</h2>

      <ul>
      <% book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name, class: "col-md-4 control-label" %>
     <div class="col-md-8">
        <%= f.text_field :name %>
      </div>
  </div>

  <div class="form-group">
    <%= f.label :description, class: "col-md-4 control-label" %>
     <div class="col-md-8">
      <%= f.text_area :description %>
     </div>
  </div>

   <div class="form-group">
    <%= f.label :picture, class: "col-md-4 control-label" %>
    <div class="col-md-8">
      <%= f.file_field :picture %>
    </div>
  </div>

   <div class="form-group">
    <%= f.label :ispublic, class: "col-md-4 control-label" %>
    <div class="col-md-8">
      <%= f.check_box  :ispublic %>
    </div>
  </div>
   <% options = options_from_collection_for_select(@categories, 'id', 'category_name') %>
   <div class="form-group">
     <%= f.label :categories, class: "col-md-4 control-label" %>
     <div class="col-md-8">
       <%= f.select :category,  options %>
     </div>
   </div>
   <% options = options_from_collection_for_select(@users, 'id', 'username') %>
   <div class="form-group">
     <span class="col-md-4 control-label">Coauthors:</span>
     <div class="col-md-8">
       <%= select_tag("coauthors[]", options, :multiple => "true") %>
     </div>
   </div>
   <div class="form-group">
     <span class="col-md-4 control-label">Tags </span>
     <div class="col-md-8">
      <%= f.text_field :all_tags, placeholder: "Tags separated with comma" %>
     </div>
   </div>
   <div class="form-group">
    <span class="col-md-4 control-label"> </span>
    <div class="col-md-8">
      <div class="actions">
        <%= f.submit "Create", class: "btn btn-default btn-primary custom-button"%>
      </div>
    </div>
   </div>
<% end %>
